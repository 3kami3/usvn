    	<th></th>
    </tr>
	</thead>
	<tbody>
		<? if (count($this->tickets) == 0): ?>
    <tr class=""><td colspan="7">Aucun Ticket</td></tr>
		<? else: ?>
    <? $even = true ?>
    <? foreach ($this->tickets as $ticket): ?>
    <? $even = !true ?>
    <? $showUrl = $this->url(array('project' => $this->project->name, 'action' => 'showticket', 'id' => $ticket->id), 'ticket') ?>
    <tr class="<?= $even ? 'even' : 'odd' ?>">
        <td><a class="atd" href="<?= $showUrl ?>"><?= h_($ticket->title) ?> </a></td>
	      <td><a class="atd" href="<?= $showUrl ?>"><?= $ticket->creationDate->toString(Zend_Date::DATETIME_SHORT) ?> </a></td>
  	    <td><a class="atd" href="<?= $showUrl ?>"><?= $ticket->modificationDate->toString(Zend_Date::DATETIME_SHORT) ?> </a></td>
    	  <!-- td><a class="atd" href="<?= $showUrl ?>"><?= h_($ticket->description) ?></a></td -->
      	<td><a class="atd" href="<?= $showUrl ?>"><?= h_($ticket->type) ?>&nbsp;</a></td>
        <td><a class="atd" href="<?= $showUrl ?>"><?= h_($ticket->status) ?>&nbsp;</a></td>
	      <td><a class="atd" href="<?= $showUrl ?>"><?= h_($ticket->getPriorityText()) ?>&nbsp;</a></td>
	      <td><?= $this->urlConfirm(array('controller' => 'project', 'action' => 'deleteticket', 'project' => $this->project->name , 'id' => $ticket->id), $this->img('delete.png'), sprintf('pwet %s', $ticket->title), 'ticket') ?></td>
