	  	<th colspan="7"><a href="<?= $this->url(array('project' => $this->project->name, 'action' => 'addticket'), 'ticket') ?>"><?= T_('Nouveau') ?><?= $this->img('add.png') ?></a></th>
	  </tr>
  </tfoot>
</table>
