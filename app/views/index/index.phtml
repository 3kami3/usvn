<?php
if (count($this->groups)) {
	echo '<ul>';
	foreach ($this->groups as $group) {
		echo '<li><a href="' . $this->url(array('controller' => 'group', 'group' => $group->name), 'group') . '">' . $group->name . '</a></li>';
	}
